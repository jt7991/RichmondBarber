---
import Navigation from "../components/Navigation.astro";
import { SEO } from "astro-seo";
import logoImage from "../assets/sms_preview.webp";
import heroImage from "../assets/hero.webp";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <script
      defer
      src="https://analytics.jakey.fyi/script.js"
      data-website-id="b49bd076-e074-4f7b-8a66-c9aefdb94c0c"></script>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />

    <link rel="preload" href={logoImage.src} as="image" />
    <link rel="dns-prefetch" href="//images.unsplash.com" />
    <link rel="dns-prefetch" href="//www.instagram.com" />
    <link rel="dns-prefetch" href="//www.google.com" />
    <link
      rel="preload"
      as="image"
      href={heroImage.src}
      crossorigin="anonymous"
    />
    <meta name="generator" content={Astro.generator} />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Richmond Barbershop",
        "url": "https://richmondbarbershop.com",
        "logo": "https://richmondbarbershop.com/_astro/BARBERSHOP2.Dm4BP8K8_1Rlf73.webp",
        "description": "Premier barber shop in Richmond VA offering professional men's grooming services including haircuts, beard trims, and hot shaves.",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "2820 W Cary St Suite C",
          "addressLocality": "Richmond",
          "addressRegion": "VA",
          "postalCode": "23221",
          "addressCountry": "US"
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+1-804-203-0221",
          "contactType": "customer service",
          "availableLanguage": "English"
        },
        "sameAs": [
          "https://www.instagram.com/rvabarbershop",
          "https://www.facebook.com/richmondbarbershop"
        ],
        "areaServed": [
          {
            "@type": "City",
            "name": "Richmond",
            "addressRegion": "VA",
            "addressCountry": "US"
          },
          {
            "@type": "City",
            "name": "Carytown",
            "addressRegion": "VA",
            "addressCountry": "US"
          }
        ]
      }
    </script>
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Richmond Barbershop",
        "description": "Experience top-notch barber services in Richmond. From classic cuts to modern styles, our skilled barbers provide exceptional grooming for men.",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "2820 W Cary St Suite C",
          "addressLocality": "Richmond",
          "addressRegion": "VA",
          "postalCode": "23221",
          "addressCountry": "US"
        },
        "telephone": "+15551234567",
        "url": "https://richmondbarbershop.com",
        "image": "/richmond-barbershop-logo.png",
        "priceRange": "$$",
        "openingHours": [
          "Mo-Fr 09:00-19:00",
          "Sa 08:00-17:00",
          "Su 10:00-16:00"
        ]
      }
    </script>
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "Do I need to make an appointment at Richmond Barbershop?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Appointments are highly recommended and you can make an appointment ahead of time by scheduling here. Walk-ins are welcome when available!"
            }
          },
          {
            "@type": "Question",
            "name": "Do you have onsite parking?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "We do not have onsite parking, however there is street parking, as well as a 2 story parking garage directly across the street!"
            }
          },
          {
            "@type": "Question",
            "name": "What ages are welcome?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "We offer haircuts for ages 8+"
            }
          },
          {
            "@type": "Question",
            "name": "What is your cancellation policy?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Cancelations need to be made at least 8 hours before your appointment online or by phone. Otherwise you will be charged in full for your missed appointment."
            }
          },
          {
            "@type": "Question",
            "name": "What areas of Richmond, VA do you serve?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "We proudly serve the following nearby neighborhoods: Carytown, The Fan, Museum District, Scott's Addition, Church Hill, Rocketts Landing, Shockoe Bottom, Lakeside, Forest Hill, Henrico, The West End, Bon Air, Glen Allen, Mechanicsville, Midlothian, Chesterfield, and other surrounding areas!"
            }
          }
        ]
      }
    </script>
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Richmond Barbershop",
        "url": "https://richmondbarbershop.com",
        "hasOfferCatalog": {
          "@type": "OfferCatalog",
          "name": "Barber Services",
          "itemListElement": [
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Haircut",
                "description": "Precision cuts tailored to your style.",
                "provider": {
                  "@type": "LocalBusiness",
                  "name": "Richmond Barbershop"
                }
              },
              "priceSpecification": {
                "@type": "PriceSpecification",
                "price": "40",
                "priceCurrency": "USD"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Scissor Cut",
                "description": "Precision cuts tailored to your style.",
                "provider": {
                  "@type": "LocalBusiness",
                  "name": "Richmond Barbershop"
                }
              },
              "priceSpecification": {
                "@type": "PriceSpecification",
                "price": "50",
                "priceCurrency": "USD"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Beard Trim",
                "description": "Expert shaping and grooming for a sharp look.",
                "provider": {
                  "@type": "LocalBusiness",
                  "name": "Richmond Barbershop"
                }
              },
              "priceSpecification": {
                "@type": "PriceSpecification",
                "price": "20",
                "priceCurrency": "USD"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Straight Razor Shave",
                "description": "Traditional hot towel shave for ultimate comfort.",
                "provider": {
                  "@type": "LocalBusiness",
                  "name": "Richmond Barbershop"
                }
              },
              "priceSpecification": {
                "@type": "PriceSpecification",
                "price": "30",
                "priceCurrency": "USD"
              }
            }
          ]
        }
       }
     </script>
     <script type="application/ld+json">
       {
         "@context": "https://schema.org",
         "@type": "WebSite",
         "name": "Richmond Barbershop",
         "url": "https://richmondbarbershop.com"
       }
     </script>
     <link rel="canonical" href={Astro.url} />
    <meta
      property="og:description"
      name="description"
      content="Experience top-notch barber services in Richmond VA. From classic cuts to modern styles, our skilled barbers provide exceptional grooming for men in Carytown and surrounding areas."
    />
    <SEO
      title="Richmond Barbershop - Professional Haircuts and Grooming"
      description="Experience top-notch barber services in Richmond VA. From classic cuts to modern styles, our skilled barbers provide exceptional grooming for men in Carytown and surrounding areas."
      openGraph={{
        basic: {
          title: "Richmond Barbershop",
          type: "website",
          image: `https://richmondbarbershop.com${logoImage.src}`,
          url: "https://richmondbarbershop.com",
        },
        image: {
          alt: "Richmond barbershop interior and services",
        },
      }}
      twitter={{
        card: "summary_large_image",
        title: "Richmond Barbershop",
        description: "Top barber services in Richmond VA.",
        image: `https://richmondbarbershop.com${logoImage.src}`,
        imageAlt: "Richmond Barbershop logo",
      }}
    />
    <style>
      body {
        font-family: "Oswald", sans-serif;
      }
    </style></head
  >

  <body class="font-sans">
    <Navigation />
    <slot />
  </body>
</html>
