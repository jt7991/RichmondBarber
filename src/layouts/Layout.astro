---
import Navigation from "../components/Navigation.astro";
import { SEO } from "astro-seo";
import heroImage from "../assets/hero.webp";
import logoImage from "../assets/richmond-barbershop-logo.png";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ðŸ’ˆ</text></svg>"
    />
    <link rel="preload" href={heroImage.src} as="image" />
    <link rel="preload" href={logoImage.src} as="image" />
    <link rel="dns-prefetch" href="//images.unsplash.com" />
    <link rel="dns-prefetch" href="//www.instagram.com" />
    <link rel="dns-prefetch" href="//www.google.com" />
    <meta name="generator" content={Astro.generator}     />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Richmond Barbershop",
        "description": "Experience top-notch barber services in Richmond. From classic cuts to modern styles, our skilled barbers provide exceptional grooming for men.",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "2820 W Cary St Suite C",
          "addressLocality": "Richmond",
          "addressRegion": "VA",
          "postalCode": "23221",
          "addressCountry": "US"
        },
        "telephone": "+15551234567",
        "url": "https://richmondbarber.com",
        "image": "/richmond-barbershop-logo.png",
        "priceRange": "$$",
        "openingHours": "Mo-Sa 09:00-18:00"
      }
    </script>
    <SEO
      title="Richmond Barber Shop - Professional Haircuts and Grooming"
      description="Experience top-notch barber services in Richmond. From classic cuts to modern styles, our skilled barbers provide exceptional grooming for men."
      openGraph={{
        basic: {
          title: "Richmond Barber Shop",
          type: "website",
          image: "/richmond-barbershop-logo.png",
          url: "https://richmondbarber.com"
        },
        image: {
          alt: "Richmond Barber Shop logo"
        }
      }}
      twitter={{
        card: "summary_large_image",
        title: "Richmond Barber Shop",
        description: "Top barber services in Richmond.",
        image: "/richmond-barbershop-logo.png",
        imageAlt: "Richmond Barber Shop logo"
      }}
    />
  </head>
  <style>
    body {
      font-family: 'Oswald', sans-serif;
    }
  </style>
  <body class="font-sans">
    <Navigation />
    <slot />
  </body>
</html>
